<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado focado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/epg_accent_red" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Estado selecionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/epg_accent_red" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Estado pressionado (opcional, mas bom ter um feedback) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/epg_accent_red_light" /> <!-- Um vermelho mais claro para pressionado -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Estado padrÃ£o (transparente para mostrar o fundo do painel) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
