<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado focado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" /> <!-- Um branco translúcido para indicar foco -->
            <stroke android:width="2dp" android:color="@color/purple_500" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Estado padrão (não focado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fundo transparente normal do CardView -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
