<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/epg_item_background_selector_red"
    android:focusable="true"
    android:clickable="true">

    <!-- Logo do Canal (Esquerda) -->
    <ImageView
        android:id="@+id/channel_logo_sliding"
        android:layout_width="52dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"/>

    <!-- Bloco de Informações Textuais (Direita do Logo) -->
    <LinearLayout
        android:id="@+id/channel_text_info_sliding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/channel_logo_sliding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0">

        <!-- Linha para Número e Nome do Canal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/channel_number_sliding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="101"
                android:textColor="@color/light_grey_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/channel_name_sliding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nome do Canal Bem Longo HD"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- Nome do Programa Atual -->
        <TextView
            android:id="@+id/program_name_sliding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Programa Atual com um Título Extenso"
            android:textColor="@color/light_grey_text"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Barra de Progresso do Programa -->
        <ProgressBar
            android:id="@+id/program_progress_sliding"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:progress="50"
            android:max="100"
            android:progressTint="@color/epg_accent_red_light"
            android:progressBackgroundTint="@color/epg_progress_background"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <!-- Divisor Inferior (opcional, se a marginBottom não for suficiente) -->
    <!-- <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/epg_divider_color_red_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"/> -->

</androidx.constraintlayout.widget.ConstraintLayout>
