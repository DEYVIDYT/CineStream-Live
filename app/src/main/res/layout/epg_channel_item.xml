<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="0dp"
    android:background="@drawable/category_item_background_selector"
    android:focusable="true"
    android:clickable="true">

    <!-- Bloco de Informações do Canal (Número, Nome, Programa, Progresso) -->
    <LinearLayout
        android:id="@+id/channel_info_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/channel_epg_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="12dp">

        <!-- Linha para Número e Nome do Canal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/channel_epg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="101"
                android:textColor="@color/light_grey_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/channel_epg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nome do Canal HD Max Plus"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- Nome do Programa Atual -->
        <TextView
            android:id="@+id/channel_epg_program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Programa Atual: Um Episódio Muito Interessante e Com Nome Longo Para Testes"
            android:textColor="@color/light_grey_text"
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Barra de Progresso do Programa -->
        <ProgressBar
            android:id="@+id/channel_epg_program_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:progress="60"
            android:max="100"
            android:progressTint="@color/dark_gold"
            android:progressBackgroundTint="@color/epg_progress_background"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <!-- Logo do Canal (à direita) -->
    <ImageView
        android:id="@+id/channel_epg_logo"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/channel_info_block"
        app:layout_constraintBottom_toBottomOf="@id/channel_info_block"/>

    <!-- Divisor Inferior -->
    <View
        android:id="@+id/item_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2A2A2A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/channel_info_block"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
