<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/category_item_background_selector"
    android:focusable="true"
    android:clickable="true"
    android:stateListAnimator="@animator/item_focus_scale_animator">

    <!-- Logo do Canal -->
    <ImageView
        android:id="@+id/channel_epg_logo"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Bloco de Informações do Canal (Número, Nome, Programa, Progresso) -->
    <LinearLayout
        android:id="@+id/channel_info_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/channel_epg_logo"
        app:layout_constraintEnd_toStartOf="@+id/channel_epg_favorite_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Linha para Número e Nome do Canal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/channel_epg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="167"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/channel_epg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="AMC HD Super Extenso Nome"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- Nome do Programa Atual -->
        <TextView
            android:id="@+id/channel_epg_program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Planet Action: Episode 3 Season 1 com nome longo"
            android:textColor="#B0B0B0"
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Barra de Progresso do Programa -->
        <ProgressBar
            android:id="@+id/channel_epg_program_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:progress="60"
            android:max="100"
            android:progressTint="@color/dark_gold"
            android:progressBackgroundTint="@color/epg_progress_background"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <!-- Ícone de Favorito (à direita) -->
    <ImageView
        android:id="@+id/channel_epg_favorite_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_border"
        app:tint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
