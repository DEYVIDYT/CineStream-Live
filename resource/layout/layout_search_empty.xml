<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/background_dark">

    <ImageView
        android:id="@+id/searchEmptyIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_search_empty"
        android:alpha="0.6" />

    <TextView
        android:id="@+id/searchEmptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum resultado encontrado"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/searchEmptyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não encontramos nenhum resultado para sua busca. Tente usar palavras-chave diferentes ou verifique a ortografia."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <TextView
        android:id="@+id/searchSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dicas:\n• Use termos mais genéricos\n• Verifique a ortografia\n• Tente sinônimos ou palavras relacionadas"
        android:textSize="14sp"
        android:textColor="@color/text_hint"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearSearchButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIMPAR BUSCA"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/accent_color"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:rippleColor="@color/ripple_color" />

</LinearLayout>