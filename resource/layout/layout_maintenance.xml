<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/background_dark">

    <ImageView
        android:id="@+id/maintenanceIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_maintenance"
        android:alpha="0.8" />

    <TextView
        android:id="@+id/maintenanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serviço temporariamente indisponível"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/maintenanceMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estamos realizando melhorias no sistema. O serviço voltará ao normal em breve. Obrigado pela paciência!"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERIFICAR NOVAMENTE"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/warning_color"
        android:drawableLeft="@drawable/ic_refresh"
        android:drawablePadding="8dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:cornerRadius="8dp"
        app:rippleColor="@color/ripple_color" />

</LinearLayout>