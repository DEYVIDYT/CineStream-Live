<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/success"
                android:endColor="@color/accent_secondary"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/accent_primary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/success"
                android:endColor="@color/accent_primary"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/text_accent" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/success"
                android:endColor="@color/accent_primary"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/accent_secondary" />
        </shape>
    </item>
</selector>