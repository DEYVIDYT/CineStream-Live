<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/success_green_dark"
                android:endColor="@color/premium_gold_dark"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/premium_gold" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/success_green"
                android:endColor="@color/premium_gold"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/neon_gold" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/success_green"
                android:endColor="@color/premium_gold"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/premium_gold_dark" />
        </shape>
    </item>
</selector>