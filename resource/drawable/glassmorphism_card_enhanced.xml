<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra externa -->
    <item android:left="0dp" android:right="4dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/shadow_color" />
        </shape>
    </item>
    
    <!-- Card principal com glassmorphism -->
    <item android:left="0dp" android:right="4dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:startColor="@color/surface_glassmorphism"
                android:endColor="@color/surface_blur"
                android:angle="135" />
            <stroke 
                android:width="1dp" 
                android:color="@color/overlay_light" />
        </shape>
    </item>
    
</layer-list>