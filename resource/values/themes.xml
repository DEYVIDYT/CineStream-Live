<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VplayMobile" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/accent_secondary</item>
        <item name="colorSecondaryVariant">@color/neon_pink</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="colorTertiary">@color/electric_blue</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_card</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <style name="Theme.VplayMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <style name="Theme.VplayMobile.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Estilos para componentes de conteúdo -->
    <style name="CategoryTextStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="CategorySelectedTextStyle" parent="CategoryTextStyle">
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ChannelTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <style name="ChannelSubtitleStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="MovieTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="MovieYearStyle">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    
    <style name="RatingBadgeStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/accent_color</item>
    </style>
    
    <style name="VideoSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_bar_progress</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:splitTrack">false</item>
    </style>
    
    <!-- Hierarquia tipográfica moderna -->
    <style name="DisplayLargeStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">57sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <style name="DisplayMediumStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>
    
    <style name="DisplaySmallStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="HeadlineLargeStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    
    <style name="HeadlineMediumStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <style name="HeadlineSmallStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.35</item>
    </style>
    
    <style name="TitleLargeStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <!-- Estilos para login/registro modernos -->
    <style name="LoginTitleStyle" parent="HeadlineLargeStyle">
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="LoginSubtitleStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <!-- Estilos de botões modernos -->
    <style name="PrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/primary_purple</item>
        <item name="rippleColor">@color/ripple_accent</item>
    </style>
    
    <style name="SecondaryButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/primary_purple</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="rippleColor">@color/ripple_accent</item>
    </style>
    
    <style name="FloatingActionButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="tint">@color/white</item>
        <item name="elevation">12dp</item>
        <item name="hoveredFocusedTranslationZ">16dp</item>
        <item name="pressedTranslationZ">20dp</item>
    </style>
    
    <style name="ModernButtonStyle" parent="PrimaryButtonStyle" />
    
    <style name="InputFieldStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
    
    <!-- Estilos para elementos de UI especiais -->
    <style name="ContactTextStyle">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="LiveIndicatorStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/live_indicator</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    
    <style name="PremiumBadgeStyle">
        <item name="android:textColor">@color/background_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/premium_gold</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    
    <style name="ErrorMessageStyle">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
    <style name="SuccessMessageStyle">
        <item name="android:textColor">@color/success_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    
</resources>