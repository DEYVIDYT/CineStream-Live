<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CineStreamLiveMobile" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
    
    <style name="Theme.CineStreamLiveMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <style name="Theme.CineStreamLiveMobile.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="CategoryTextStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="CategorySelectedTextStyle" parent="CategoryTextStyle">
        <item name="android:textColor">@color/accent_color</item>
    </style>
    
    <style name="ChannelTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ChannelSubtitleStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/accent_color</item>
    </style>
    
    <style name="VideoSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_bar_progress</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:splitTrack">false</item>
    </style>
</resources>