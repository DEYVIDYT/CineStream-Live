<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- 🎬 TEMA PRINCIPAL - CINEMATOGRÁFICO -->
    <style name="Theme.CineStreamLiveMobile" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Cores Primárias -->
        <item name="colorPrimary">@color/cinema_red</item>
        <item name="colorPrimaryVariant">@color/cinema_red_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Cores Secundárias -->
        <item name="colorSecondary">@color/energy_orange</item>
        <item name="colorSecondaryVariant">@color/energy_orange_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Cores de Fundo -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Cores do Sistema -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_black</item>
        <item name="android:navigationBarColor">@color/background_black</item>
        
        <!-- Cores de Acento -->
        <item name="colorAccent">@color/premium_gold</item>
        <item name="colorControlActivated">@color/cinema_red</item>
        <item name="colorControlHighlight">@color/energy_orange</item>
        
        <!-- Cores de Estado -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_primary</item>
    </style>
    
    <!-- 🌙 TEMA ESCURO INTENSO -->
    <style name="Theme.CineStreamLiveMobile.Dark" parent="Theme.CineStreamLiveMobile">
        <item name="android:colorBackground">@color/night_black</item>
        <item name="colorSurface">@color/night_surface</item>
        <item name="android:windowBackground">@color/night_black</item>
        <item name="android:statusBarColor">@color/night_black</item>
        <item name="android:navigationBarColor">@color/night_black</item>
    </style>
    
    <!-- 🎭 TEMA PREMIUM -->
    <style name="Theme.CineStreamLiveMobile.Premium" parent="Theme.CineStreamLiveMobile">
        <item name="colorPrimary">@color/premium_gold</item>
        <item name="colorPrimaryVariant">@color/premium_gold_dark</item>
        <item name="colorSecondary">@color/cinema_red</item>
        <item name="colorSecondaryVariant">@color/cinema_red_dark</item>
        <item name="colorAccent">@color/neon_gold</item>
    </style>
    
    <!-- 📱 TEMAS DE ACTIVITY -->
    <style name="Theme.CineStreamLiveMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <style name="Theme.CineStreamLiveMobile.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>
    
    <!-- 🎨 ESTILOS DE TEXTO MODERNOS -->
    
    <!-- Títulos Principais -->
    <style name="TitleStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TitleStyle.Cinema">
        <item name="android:textColor">@color/cinema_red</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TitleStyle.Premium">
        <item name="android:textColor">@color/premium_gold</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Subtítulos -->
    <style name="SubtitleStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <!-- Corpo de Texto -->
    <style name="BodyTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>
    
    <style name="BodyTextStyle.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- 🎯 ESTILOS DE BOTÕES MODERNOS -->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="ButtonStyle.Primary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="ButtonStyle.Secondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="ButtonStyle.Success">
        <item name="android:background">@drawable/button_success</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 📺 ESTILOS ESPECÍFICOS DO APP -->
    
    <!-- Categorias -->
    <style name="CategoryTextStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    
    <style name="CategorySelectedTextStyle" parent="CategoryTextStyle">
        <item name="android:textColor">@color/cinema_red</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Canais -->
    <style name="ChannelTitleStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="ChannelSubtitleStyle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- 🔍 ESTILOS DE BUSCA -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/cinema_red</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>
    
    <!-- 🎬 ESTILOS DE VÍDEO -->
    <style name="VideoSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_bar_progress</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:splitTrack">false</item>
        <item name="android:progressTint">@color/cinema_red</item>
        <item name="android:thumbTint">@color/premium_gold</item>
    </style>
    
    <!-- 💎 ESTILOS ESPECIAIS -->
    
    <!-- Cards Premium -->
    <style name="PremiumCardStyle">
        <item name="android:background">@drawable/premium_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">20dp</item>
    </style>
    
    <!-- Badges/Etiquetas -->
    <style name="BadgeStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:padding">4dp</item>
    </style>
    
    <style name="BadgeStyle.Live">
        <item name="android:background">@color/live_indicator</item>
    </style>
    
    <style name="BadgeStyle.Premium">
        <item name="android:background">@color/premium_badge</item>
        <item name="android:textColor">@color/background_black</item>
    </style>
    
    <style name="BadgeStyle.New">
        <item name="android:background">@color/new_badge</item>
    </style>
    
    <style name="BadgeStyle.Featured">
        <item name="android:background">@color/featured_badge</item>
    </style>
    
    <!-- 📱 INPUT STYLES MODERNOS -->
    <style name="InputFieldStyle">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- 🌟 ANIMAÇÕES E ELEVAÇÕES -->
    <style name="ElevatedCardStyle">
        <item name="android:elevation">6dp</item>
        <item name="android:translationZ">2dp</item>
    </style>
    
    <style name="FloatingCardStyle" parent="ElevatedCardStyle">
        <item name="android:elevation">12dp</item>
        <item name="android:translationZ">4dp</item>
    </style>
    
</resources>